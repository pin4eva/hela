{
  // "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@/components/*": [
        "/src/components/*"
      ],
      "@/styles/*": [
        "/src/styles/*"
      ],
      "@/utils/*": [
        "/src/utils/*"
      ],
      "@/pages/*": [
        "/src/pages/*"
      ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    
    "module": "esnext",
    
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ],
}